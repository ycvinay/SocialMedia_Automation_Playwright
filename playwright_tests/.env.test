# Test Environment Configuration
# Copy this file to .env and update with your settings

# ==================== APPLICATION URLS ====================
BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:5000/api

# ==================== BROWSER SETTINGS ====================
BROWSER_TYPE=chromium          # chromium, firefox, webkit
HEADLESS=False                 # Run browser in visible mode (not headless)
SLOW_MO=500                    # Slow down operations by 500ms for visibility
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# ==================== TIMEOUT SETTINGS (milliseconds) ====================
DEFAULT_TIMEOUT=30000          # 30 seconds
NAVIGATION_TIMEOUT=30000       # 30 seconds
ELEMENT_WAIT_TIMEOUT=10000     # 10 seconds
API_REQUEST_TIMEOUT=30000      # 30 seconds
SHORT_TIMEOUT=5000             # 5 seconds
LONG_TIMEOUT=60000             # 60 seconds

# ==================== SCREENSHOT SETTINGS ====================
SCREENSHOT_ON_FAILURE=True
SCREENSHOT_DIR=screenshots
SCREENSHOT_FORMAT=png          # png, jpeg
SCREENSHOT_FULL_PAGE=True
SCREENSHOT_QUALITY=90

# ==================== VIDEO SETTINGS ====================
VIDEO_ENABLED=False            # Enable video recording
VIDEO_DIR=videos
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_RETAIN_ON_SUCCESS=False  # Keep videos of passed tests

# ==================== TEST EXECUTION ====================
PARALLEL_EXECUTION=False       # Run tests in parallel
WORKERS=4                      # Number of parallel workers
RETRY_FAILED=0                 # Number of retries for failed tests
MAX_FAILURES=0                 # Stop after N failures (0 = no limit)
CLEANUP_TEST_DATA=True         # Cleanup test data after execution

# ==================== REPORTING ====================
REPORT_DIR=reports
REPORT_FORMAT=html             # html, json, xml
ALLURE_ENABLED=False           # Generate Allure reports
ALLURE_RESULTS_DIR=allure-results

# ==================== ENVIRONMENT ====================
TEST_ENV=dev                   # dev, staging, production
DB_CLEANUP=False               # Cleanup database after tests

# ==================== LOGGING ====================
LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=test_execution.log
CONSOLE_LOGGING=True
